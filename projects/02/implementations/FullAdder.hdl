/**
 * Computes the sum of three bits.
 */

CHIP FullAdder {
    IN a, b, c;  
    OUT sum,
        carry;

    PARTS:
    
    HalfAdder(a=a, b=b, sum=sumab, carry=carryab);
    HalfAdder(a=sumab, b=c, sum=sum, carry=carryabc);
    Or(a=carryab, b=carryabc, out=carry);

}